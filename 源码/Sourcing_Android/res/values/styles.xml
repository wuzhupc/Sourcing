<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.WuzhuLight" parent="android:style/Theme.Light">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
    </style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.WuzhuLightFullScreen" parent="android:style/Theme.Light">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.WuzhuDialog_NoFrame" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/theme_dialog_bg</item>
    </style>
    
	<!-- 对话框按钮样式 -->
    <style name="dialog_button">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:background">@drawable/common_selector_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="TitleBar">
        <item name="android:id">@id/activity_title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <!-- <item name="android:background">@color/activity_title_bg_color</item> -->
       <item name="android:background">@drawable/top_title_bg</item> 
    </style>

    <style name="TitleBarAction">
        <item name="android:layout_width">@dimen/title_height</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/title_button</item>
    </style>

    <style name="TitleBarLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/logo64_48</item>
    </style>

    <style name="TitleBarSeparator">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/activity_title_separator</item>
    </style>
    
    <style name="TitleBarText">
        <item name="android:id">@id/activity_title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/activity_title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <!-- 设置项style相关 -->
    <style name="SettingGroupStyle">
   		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@drawable/bg_listitem_base</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="SettingGroupStyleH">
   		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@drawable/bg_listitem_base</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    
    <!-- 设置标题风格 -->
    <style name="SettingTVStyle">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_marginLeft">5dp</item>
    	<item name="android:layout_gravity">center_vertical</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    	<item name="android:textColor">@android:color/black</item>
    </style>
    
    <!-- 设置2级标题风格 -->
    <style name="Setting2TVStyle">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">36dip</item>
    	<item name="android:gravity">center</item>
    	<item name="android:paddingLeft">20dip</item>
    	<item name="android:textColor">@android:color/black</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <!-- 设置 2级副标题风格-->
    <style name="Setting2SubTVStyle">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:gravity">center</item>
    	<item name="android:paddingLeft">20dip</item>
    	<item name="android:textColor">#777</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
	<!-- 列表0分割线 -->
	<style name="SettingDividerHorizontal">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/list_base_divider</item>
    </style>
</resources>