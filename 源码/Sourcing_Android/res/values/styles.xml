<resources>

    <!-- Base application theme is the default theme. -->
    <style name="Theme" parent="android:Theme"></style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.WuzhuLight" parent="android:style/Theme.Light">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
    </style>

    <!-- Variation on the Light theme that turns off the title -->
    <style name="Theme.WuzhuLightFullScreen" parent="android:style/Theme.Light">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.WuzhuDialog_NoFrame" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/theme_dialog_bg</item>
    </style>
    
	<!-- 对话框按钮样式 -->
    <style name="dialog_button">
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
        <item name="android:background">@drawable/common_selector_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>