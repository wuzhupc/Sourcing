<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listitem_base"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/listitem_consult_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="咨询信息内容"
            android:textColor="@color/listitem_base_titlecolor"
            android:textSize="@dimen/text_size_medium" />

        <TextView
        android:id="@+id/listitem_consult_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2012-12-20 21:48:00"
            android:textColor="@color/listitem_base_summarycolor"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listitem_consult_result_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_bg_result"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
        android:id="@+id/listitem_consult_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="咨询答复内容"
            android:textColor="@color/listitem_base_titlecolor"
            android:textSize="@dimen/text_size_medium" />

        <TextView
        android:id="@+id/listitem_consult_result_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="答复人员　  2012-12-20 21:48:00"
            android:textColor="@color/listitem_base_summarycolor"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</LinearLayout>