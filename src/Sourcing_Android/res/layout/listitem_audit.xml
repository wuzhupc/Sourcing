<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_listitem_base"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
        android:id="@+id/listitem_audit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="审核信息内容"
            android:focusable="true"
            android:textColor="@color/listitem_base_titlecolor"
            android:textSize="@dimen/text_size_medium" />
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<TextView
        android:id="@+id/listitem_audit_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="等待审核中"
            android:textColor="@color/listitem_base_titlecolor"
            android:textSize="@dimen/text_size_small" />
        <TextView
        android:id="@+id/listitem_audit_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2012-12-20 21:48:00"
            android:textColor="@color/listitem_base_summarycolor"
            android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/listitem_audit_result_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_bg_result"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
        android:id="@+id/listitem_audit_result_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="审核结果内容"
            android:focusable="true"
            android:textColor="@color/listitem_base_titlecolor"
            android:textSize="@dimen/text_size_medium" />

        <TextView
        android:id="@+id/listitem_audit_result_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="审核人员　  2012-12-20 21:48:00"
            android:textColor="@color/listitem_base_summarycolor"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

</LinearLayout>